{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "TodoWrite",
      "Task",
      "SlashCommand",
      "NotebookEdit",
      "NotebookRead",
      "Bash(*)",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/credentials.*)",
      "Read(~/.ssh/**)",
      "Edit(.env*)",
      "Edit(~/.ssh/**)",
      "Write(.env*)",
      "Write(~/.ssh/**)",
      "Bash(rm -rf:*)"
    ],
    "ask": []
  }
}
